{
  "name": "playwright-framework",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "PWDEBUG=1 playwright test",
    "test:smoke": "playwright test -g @smoke",
    "report": "playwright show-report",
    "trace": "playwright show-trace reports/traces/trace.zip",
    "codegen": "playwright codegen",
    "devices": "node -e \"console.log(require('playwright-core').devices)\"",
    "preauth": "node utils/helpers.js preauth",
    "lint": "eslint .",
    "format": "prettier -w ."
  },
  "dependencies": {
    "@playwright/test": "^1.56.1",
    "dotenv": "^16.4.5",
    "luxon": "^3.5.0"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3"
  }
}
